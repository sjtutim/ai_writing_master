# Server Configuration
PORT=3001
NODE_ENV=development

# PostgreSQL Configuration
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_USER=your-username
POSTGRES_PASSWORD=your-password
POSTGRES_DB=kb

# Prisma Database URL (性能优化配置)
# 连接池参数说明:
# - connection_limit: 最大连接数 (默认推荐20)
# - pool_timeout: 连接池超时时间，单位秒 (默认推荐10)
DATABASE_URL="postgresql://your-username:your-password@your-postgres-host:5432/kb?schema=public&connection_limit=20&pool_timeout=10"

# MinIO Configuration
MINIO_ENDPOINT=your-minio-host
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
MINIO_BUCKET=your-bucket-name
# 文件类型通过路径前缀区分：kb-raw/, kb-md/, outputs/

# BGE-M3 Embedding API
EMBEDDING_API_URL=http://your-host:1234/v1/embeddings
EMBEDDING_MODEL=text-embedding-bge-m3

# DeepSeek/vLLM Configuration
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_API_KEY=your-api-key
DEEPSEEK_MODEL=deepseek-chat

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
